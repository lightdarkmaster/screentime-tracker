{
    "manifest_version": 2,
    "name": "Screen Time Tracker",
    "description": "Track the duration of how long you spend in your browser screen.",
    "version": "1.0",
    "permissions": [
      "tabs",
      "activeTab",
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "scripts": ["dist/background.bundle.js"], 
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["./src/App.jsx"]
      }
    ],
    "browser_action": {
      "default_popup": "/index.html"
    },
    "action": {
      "default_popup": "/index.html",
      "default_icon": "/src/assets/screentrack.png"
    }
    
  }